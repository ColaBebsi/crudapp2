<%- include('partials/_header.ejs') %>

<div class="container mt-5">
    <div class="row">
        <div class="col-md-5 offset-md-3 card">
                <div class="card-body">
                    <form action="" method="post">
                    <div class="form-group">
                        <input type="text" name="restaurant_name" value="<%= restaurants.restaurant_name %>" class="form-control" autofocus>
                    </div>
                    <div class="form-group">
                        <input type="text" name="restaurant_city" value="<%= restaurants.restaurant_city %>" class="form-control">
                    </div>
                    <div class="form-group">
                        <input type="text" name="restaurant_address" value="<%= restaurants.restaurant_address %>" class="form-control">
                    </div>
                    <div class="form-group">
                        <select name="restaurant_rating" class="form-control">
                            <option selected ><%= restaurants.restaurant_rating %></option>
                            <option>*</option>
                            <option>**</option>
                            <option>***</option>
                            <option>****</option>
                            <option>*****</option>
                        </select>
                    </div>
                    <button type="submit" class="btn btn-primary">Update Restaurant</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>